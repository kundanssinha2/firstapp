<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
	<div>
		<div class="col-sm-6">
		  <div class="form-group">
			<label>First Name</label>
			<%= form.text_field :firat_name, id: :user_firat_name , class: "form-control" %>
		  </div>

		  <div class="form-group">
			<%= form.label :last_name %>
			<%= form.text_field :last_name, id: :user_last_name , class: "form-control" %>
		  </div>

		  <div class="form-group">
			<%= form.label :email %>
			<%= form.text_field :email, id: :user_email , class: "form-control" %>
		  </div>

		  <div class="form-group">
			<label>Confirm email</label>
			<%= form.text_field :con_email, id: :user_con_email , class: "form-control" %>
		  </div>

		  <div class="form-group">
			<%= form.label :country %>
			<%= form.text_field :country, id: :user_country , class: "form-control" %>
		  </div>

		  <div class="form-group">
			<%= form.label :city %>
			<%= form.text_field :city, id: :user_city , class: "form-control" %>
		  </div>

		  <div class="actions">
			<%= form.submit %>
		  </div>
		</div>
	</div>
<% end %>
