	.actions input{
		background-color: #4285f4;
		border-color: #4285f4;
		color: #FFF;
		box-shadow: 0 1px 0 rgba(0,0,0,.05);
		border: 1px solid transparent;
		padding: 0 10px;
		font-size: 1rem;
