<p id="notice"><%= notice %></p>

<h1>Users</h1>
<div class="text-right col-sm-12">
<%= link_to 'Add New User', new_user_path , class: "btn btn-rounded btn-space btn-success "  %>
</div>
<br/><br/>

<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Confirm email</th>
      <th>Country</th>
      <th>City</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firat_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.con_email %></td>
        <td><%= user.country %></td>
        <td><%= user.city %></td>
        <td><%= link_to 'Show', user , class: "btn btn-rounded btn-space btn-success" %>
			<%= link_to 'Edit', edit_user_path(user) , class: "btn btn-rounded btn-space btn-primary" %>
			<%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>
